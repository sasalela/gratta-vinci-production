{
  "version": 2,
  "builds": [
    {
      "src": "api/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.ts"
    },
    {
      "src": "/play/(.*)",
      "dest": "/public/index.html"
    },
    {
      "src": "/(admin-dashboard|store-dashboard|content-generator)\\.html",
      "dest": "/public/$1.html"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}
