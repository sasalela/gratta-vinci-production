{
  "version": 2,
  "builds": [
    {
      "src": "api/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.ts"
    },
    {
      "src": "/play/([^/]+)/([^/]+)",
      "dest": "/public/index.html"
    },
    {
      "src": "/admin-dashboard.html",
      "dest": "/public/admin-dashboard.html"
    },
    {
      "src": "/store-dashboard.html",
      "dest": "/public/store-dashboard.html"
    },
    {
      "src": "/content-generator.html",
      "dest": "/public/content-generator.html"
    },
    {
      "src": "/",
      "dest": "/public/index.html"
    }
  ]
}
```

